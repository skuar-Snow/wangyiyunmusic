.header {
  display: flex;
  width: 100%;
}
.header .goSearch {
  margin-left: 40rpx;
  width: 600rpx;
  background-color: #eeeeee;
  color: #aaa;
  display: flex;
  align-items: center;
  justify-content: center;
}
.swiper-wrap {
  padding: 30rpx;
}
.swiper-wrap swiper {
  width: 690rpx;
  height: 256rpx;
  overflow: hidden;
  border-radius: 14rpx;
}
.swiper-wrap image {
  width: 100%;
}
.ball-wrap {
  width: 100%;
  display: flex;
}
.ball-wrap .ball {
  width: 20%;
  flex-shrink: 0;
  text-align: center;
  font-size: 12px;
}
.ball-wrap .ball image {
  width: 50%;
  height: 40px;
  border-radius: 50%;
  background: #c84341;
}
.list-wrap {
  width: 100%;
  display: flex;
}
.list-wrap .song {
  width: 250rpx;
  margin-left: 20rpx;
  padding: 20rpx 0;
  font-size: 12px;
}
.list-wrap .song image {
  width: 250rpx;
  height: 250rpx;
}
.uni-section-header__decoration line {
  background-color: #c84341 !important;
}
.changeMusic {
  display: flex;
  height: 300rpx;
  padding: 20rpx;
}
.changeMusic .outMusic {
  width: 2000rpx;
  height: 100rpx;
  overflow-x: scroll;
  display: flex;
  box-sizing: border-box;
}
.changeMusic .outMusic > view {
  width: 80%;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  font-size: 30rpx;
}
.changeMusic .outMusic > view .left {
  display: flex;
  flex-direction: column;
}
.changeMusic .outMusic > view .left text:nth-child(2) {
  font-size: 25rpx;
  color: #999;
}
.changeMusic .outMusic > view img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
}
.changeMusic .outMusic > view text {
  text-indent: 20rpx;
}
.random {
  display: flex;
  align-items: center;
  font-size: 25rpx;
}